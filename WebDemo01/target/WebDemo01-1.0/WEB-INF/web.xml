         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

<!--    全类名+访问路径-->
    <servlet>
        <servlet-name>httpServletDemo01</servlet-name>
        <servlet-class>com.ht.web.servletdemo.HttpServletDemo01</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>httpServletDemo01</servlet-name>
        <url-pattern>/servletdemo01</url-pattern>
    </servlet-mapping>

</web-app>